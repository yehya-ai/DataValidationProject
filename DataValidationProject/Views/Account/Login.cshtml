@* Views/Account/Login.cshtml *@
@model DataValidationProject.Models.UserLogin

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2>Login - Basic Validation Demo</h2>
                <p class="text-muted">This form demonstrates basic validation techniques</p>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h5>Validation Concepts Demonstrated:</h5>
                    <ul>
                        <li><strong>Required validation</strong> - Username and password cannot be empty</li>
                        <li><strong>StringLength validation</strong> - Username must be 3-50 characters, password must be at least 6 characters</li>
                        <li><strong>DataType validation</strong> - Password field uses the password input type</li>
                        <li><strong>Custom error messages</strong> - User-friendly messages explain validation requirements</li>
                    </ul>
                </div>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Demos</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
